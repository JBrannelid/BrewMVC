@{
    ViewData["Title"] = "Booking";
}

<header class="mb-4 mt-5">
    <h1 class="custom-heading">
        Booking System Under Development
    </h1>
</header>

<section class="row justify-content-center">
    <div class="col-md-8">
        <div class="text-center bg-white rounded-3 p-5">
            <i class="bi bi-tools text-warning fs-1 mb-4"></i>
            <p class="custom-p mb-4">
