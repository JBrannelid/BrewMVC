@using BrewMVC.ViewModel.Bookings
@model List<BookingListVM>

@{
    ViewData["Title"] = "Booking administration";
}

<main class="container mt-4">
    <header class="d-flex justify-content-between align-items-center mb-4 mt-4">
        <h1 class="custom-heading mb-0">Administrate Bookings</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Booking
        </a>
    </header>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <section aria-labelledby="bookings-heading">
        @if (Model?.Any() == true)
        {
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle"
                       aria-label="Bookings administration table">
                    <thead class="table-custom-header text-white table-borderless">
                        <tr>
                            <th>Date & Time</th>
                            <th>Customer</th>
                            <th>Table</th>
                            <th>Guests</th>
                            <th>Duration</th>
                            <th>Status</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @* Order bookings by date then by booking time *@
                        @foreach (var booking in Model.OrderBy(b => b.BookingDate).ThenBy(b => b.BookingTime))
                        {
                            <tr>
                                <td>
                                    <strong>@booking.BookingDate.ToString("MMM dd, yyyy")</strong><br>
                                    <small class="text-muted">@booking.BookingTime.ToString("HH:mm")</small>
                                </td>
                                <td>
                                    @if (booking.Customer != null)
                                    {
                                        <div>
                                            <strong>@booking.Customer.Name</strong><br>
                                            <small class="text-muted">@booking.Customer.PhoneNumber</small>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Unknown customer</span>
                                    }
                                </td>
                                <td>
                                    @if (booking.Table != null)
                                    {
                                        <strong>Table @booking.Table.TableNumber</strong><br>
                                        <small class="text-muted">Capacity: @booking.Table.Capacity</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Unknown table</span>
                                    }
                                </td>
                                <td>@booking.NumberGuests</td>
                                <td>@booking.DurationTime.TotalHours h</td>
                                <td>
                                    @switch (booking.Status?.ToLower())
                                    {
                                        case "confirmed":
                                            <span class="badge bg-success">@booking.Status</span>
                                            break;
                                        case "pending":
                                            <span class="badge bg-warning text-dark">@booking.Status</span>
                                            break;
                                        case "cancelled":
                                            <span class="badge bg-danger">@booking.Status</span>
                                            break;
                                        case "completed":
                                            <span class="badge bg-secondary">@booking.Status</span>
                                            break;
                                        default:
                                            <span class="badge bg-light text-dark">@booking.Status</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@booking.BookingId" class="btn btn-warning btn-sm me-2">
                                        <i class="bi bi-pencil-square me-1"></i>Edit
                                    </a>
                                </td>
                                <td>
                                    <form asp-action="Delete" method="post" class="d-inline"
                                          onsubmit="return confirm('Are you sure you want to delete this booking?')">
                                        <input type="hidden" name="bookingId" value="@booking.BookingId" />
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="bi bi-trash me-1"></i>Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-primary" role="alert">
                <h4>No Bookings Found</h4>
                <p>There are currently no bookings in the system.</p>
                <a asp-action="Create" class="btn btn-primary">Create First Booking</a>
            </div>
        }
    </section>
</main>


