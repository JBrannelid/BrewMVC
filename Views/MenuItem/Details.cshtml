@model BrewMVC.Models.MenuItemModel
@{
    ViewData["Title"] = Model.Name;
    @inject IConfiguration Configuration

}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <!-- Menu Item Details Section -->
            <article class="bg-white rounded-3 shadow-sm mt-3">
                <div class="row g-0">
                    <div class="col-md-6">
                        <img src="@Model.ImageUrl"
                             class="img-fluid h-100"
                             style="height: 180px; object-fit: cover;"
                             alt="Image of @Model.Name" />
                    </div>
                    <div class="col-md-6">
                        <div class="p-5">
                            <header class="mb-4">
                                <!-- Menu Item Title -->
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <h1 class="custom-heading mb-0">@Model.Name</h1>
                                </div>
                                <!-- Category badge -->
                                <span class="badge bg-secondary mb-0">@Model.Category</span>
                            </header>

                            <!-- Description -->
                            <section class="mb-2">
                                <p class="custom-p">@Model.Description</p>
                            </section>

                            <!-- Price -->
                            <div class="mb-2">
                                <p class="custom-p text-muted">@Model.Price.ToString("C")</p>
                            </div>

                            <!-- Action Btn -->
                            <div class="d-flex gap-2">
                                <a href="@Configuration["ExternalUrls:BookingApp"]" 
                                   target="_blank"
                                   rel="noopener noreferrer" 
                                   class="btn ">
                                    <i class="bi bi-calendar-check me-2"></i>Book a Table
                                </a>
                                <a asp-controller="MenuItem" asp-action="Index" class="btn ">
                                    <i class="bi bi-arrow-left-short">&nbsp; Back to Menu</i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </div>
</div>