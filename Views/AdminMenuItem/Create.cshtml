@using BrewMVC.ViewModel.MenuItems
@model MenuItemListVM
@{
    ViewData["Title"] = "Create Menu Item";
}
<main class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <articel class="card mt-4">
                <header class="card-header">
                    <h1 class="custom-heading mb-0">Create New Menu Item</h1>
                </header>
                <div class="card-body">
                    <form asp-controller="AdminMenuItem" asp-action="Create" method="post"
                          role="form" aria-labelledby="create-menuitem-heading">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" aria-describedby="name-help" />
                            <span asp-validation-for="Name" class="text-danger" role="alert" aria-live="polite"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Category" class="form-label"></label>
                            <input asp-for="Category" class="form-control" aria-describedby="category-help" />
                            <span asp-validation-for="Category" class="text-danger" role="alert" aria-live="polite"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label"></label>
                            <input asp-for="Price" class="form-control" type="number" step="0.01" aria-describedby="price-help" />
                            <span asp-validation-for="Price" class="text-danger" role="alert" aria-live="polite"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3" aria-describedby="description-help"></textarea>
                            <span asp-validation-for="Description" class="text-danger" role="alert" aria-live="polite"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label"></label>
                            <input asp-for="ImageUrl" class="form-control" type="url" aria-describedby="imageurl-help" />
                            <span asp-validation-for="ImageUrl" class="text-danger" role="alert" aria-live="polite"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="IsPopular" class="form-check-input" type="checkbox" />
                            <label asp-for="IsPopular" class="form-check-label"></label>
                            <span asp-validation-for="IsPopular" class="text-danger" role="alert" aria-live="polite"></span>
                        </div>

                        <div class="d-flex justify-content-between" aria-label="Form actions">
                            <a asp-controller="AdminMenuItem" asp-action="Index" class="btn btn-secondary" role="button">
                                <i class="bi bi-arrow-left me-1" aria-hidden="true"></i>Back to Menu Items
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-plus-circle me-1" aria-hidden="true"></i>Create Menu Item
                            </button>
                        </div>
                    </form>
                </div>
            </articel>
        </div>
    </div>
</main>