@using BrewMVC.ViewModel.MenuItems
@model CreateMenuItemVM
@{
    ViewData["Title"] = "Create Menu Item";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="row justify-content-center mt-5 mb-5">
    <div class="col-lg-6">
        <div class="card rounded-3 p-4">
            <form asp-controller="AdminMenuItem" asp-action="Create" method="post" role="form">
                <div class="card-header text-center bg-white">
                    <h2 class="mb-0 custom-heading">Create New Menu Item</h2>
                </div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control" aria-describedby="name-feedback" />
                    <span asp-validation-for="Name" class="text-danger" aria-live="polite" id="name-feedback"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Category" class="form-label fw-bold"></label>
                    <input asp-for="Category" class="form-control" aria-describedby="category-feedback" />
                    <span asp-validation-for="Category" class="text-danger" aria-live="polite" id="category-feedback"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label fw-bold"></label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" aria-describedby="price-feedback" />
                    <span asp-validation-for="Price" class="text-danger" aria-live="polite" id="price-feedback"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold"></label>
                    <textarea asp-for="Description" class="form-control" rows="3" aria-describedby="description-feedback"></textarea>
                    <span asp-validation-for="Description" class="text-danger" aria-live="polite" id="description-feedback"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label fw-bold"></label>
                    <input asp-for="ImageUrl" class="form-control" type="url" aria-describedby="imageurl-feedback" />
                    <span asp-validation-for="ImageUrl" class="text-danger" aria-live="polite" id="imageurl-feedback"></span>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="IsPopular" class="form-check-input" type="checkbox" />
                    <label asp-for="IsPopular" class="form-check-label fw-bold"></label>
                    <span asp-validation-for="IsPopular" class="text-danger" aria-live="polite"></span>
                </div>

                <div class="d-flex gap-2 justify-content-center mt-4" aria-label="Form actions">
                    <a asp-controller="AdminMenuItem" asp-action="Index" class="btn btn-secondary" role="button">
                        <i class="bi bi-arrow-left me-1" aria-hidden="true"></i>Back to Menu Items
                    </a>
                    <button type="submit" class="btn btn-primary">
                        Create Menu Item
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>
