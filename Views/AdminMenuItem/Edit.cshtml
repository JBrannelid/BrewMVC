@using BrewMVC.ViewModel.MenuItems
@model UpdateMenuItemVM
@{
    ViewData["Title"] = "Edit Menu Items";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-center mt-5 mb-5">
    <div class="col-lg-6">
        <div class="card rounded-3 p-4">
            <!--Head Section -->
            <header class="card-header text-center bg-white">
                <h2 class="text-center mb-3 custom-h2">Edit Menu Item:<strong>&nbsp; @Model.Name</strong></h2>
            </header>
            <!--Body Section -->
            <section class="card-body">
                <form asp-controller="AdminMenuItem" asp-action="Edit" method="post">

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" aria-describedby="name-feedback" />
                        <span asp-validation-for="Name" class="text-danger" id="name-feedback" aria-live="polite"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Category" class="form-label"></label>
                        <input asp-for="Category" class="form-control" aria-describedby="category-feedback" />
                        <span asp-validation-for="Category" class="text-danger" id="category-feedback" aria-live="polite"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" class="form-control" type="number" step="0.01" aria-describedby="price-feedback" />
                        <span asp-validation-for="Price" class="text-danger" id="price-feedback" aria-live="polite"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <input asp-for="Description" class="form-control" aria-describedby="description-feedback" />
                        <span asp-validation-for="Description" class="text-danger" id="description-feedback" aria-live="polite"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImageUrl" class="form-label"></label>
                        <input asp-for="ImageUrl" class="form-control" type="url" aria-describedby="imageurl-feedback" />
                        <span asp-validation-for="ImageUrl" class="text-danger" id="imageurl-feedback" aria-live="polite"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="IsPopular" class="form-check-input" type="checkbox" aria-describedby="ispopular-feedback" />
                        <label asp-for="IsPopular" class="form-check-label"></label>
                        <span asp-validation-for="IsPopular" class="text-danger" id="ispopular-feedback" aria-live="polite"></span>
                    </div>

                    <div class="d-flex justify-content-between">

                    <!--Actions -->
                    <a asp-controller="AdminMenuItem" asp-action="Index" class="btn btn-secondary" aria-label="Return to menu items list">
                        <i class="bi bi-arrow-left me-1" aria-hidden="true"></i>Back
                    </a>
                    <button 
                        type="submit" 
                        class="btn btn-primary" 
                        aria-label="Save changes to menu item @Model.Name">
                        Update
                    </button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>
