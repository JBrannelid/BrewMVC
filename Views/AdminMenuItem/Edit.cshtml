@using BrewMVC.ViewModel.MenuItems
@model MenuItemListVM
@{
    ViewData["Title"] = "Edit Menu Items";
}
<main class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <article class="card mt-4">
                <header class="card-header">
                    <h2 class="custom-heading mb-0">Edit Menu Item</h2>
                </header>
                <section class="card-body">
                    <form asp-controller="AdminMenuItem" asp-action="Edit" method="post"
                          aria-labelledby="edit-menuitem-heading">

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" aria-describedby="name-help" />
                            <span asp-validation-for="Name" class="text-danger" id="name-help" role="alert"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Category" class="form-label"></label>
                            <input asp-for="Category" class="form-control" aria-describedby="category-help" />
                            <span asp-validation-for="Category" class="text-danger" id="category-help" role="alert"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label"></label>
                            <input asp-for="Price" class="form-control" type="number" step="0.01" aria-describedby="price-help" />
                            <span asp-validation-for="Price" class="text-danger" id="price-help" role="alert"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <input asp-for="Description" class="form-control" aria-describedby="description-help" />
                            <span asp-validation-for="Description" class="text-danger" id="description-help" role="alert"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label"></label>
                            <input asp-for="ImageUrl" class="form-control" type="url" aria-describedby="imageurl-help" />
                            <span asp-validation-for="ImageUrl" class="text-danger" id="imageurl-help" role="alert"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="IsPopular" class="form-check-input" type="checkbox" aria-describedby="ispopular-help" />
                            <label asp-for="IsPopular" class="form-check-label"></label>
                            <span asp-validation-for="IsPopular" class="text-danger" id="ispopular-help" role="alert"></span>
                        </div>

                        <footer class="d-flex justify-content-between">
                            <a asp-controller="AdminMenuItem" asp-action="Index" class="btn btn-secondary" aria-label="Return to menu items list">
                                <i class="bi bi-arrow-left me-1" aria-hidden="true"></i>Back to Menu Items
                            </a>
                            <button type="submit" class="btn btn-primary" aria-label="Save changes to menu item">
                                <i class="bi bi-check-circle me-1" aria-hidden="true"></i>Update Menu Item
                            </button>
                        </footer>
                    </form>
                </section>
            </article>
        </div>
    </div>
</main>