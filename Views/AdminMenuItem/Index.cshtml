@model List<BrewMVC.ViewModel.MenuItems.MenuItemListVM>

@{
    ViewData["Title"] = "Menu administration";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <header class="d-flex justify-content-between align-items-center mb-4 mt-4">
        <h1 class="fw-bold custom-heading">Administrate Menu Items</h1>
        <a asp-action="Create" class="btn btn-primary">
            Create New Item
        </a>
    </header>
        <section aria-labelledby="menu-items-heading">
        @if (Model?.Any() == true)
        {
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle"
                       aria-label="Menu items administration table">
                <!-- Table head -->
                <thead class="table-custom-header text-white table-borderless">
                    <tr>
                        <th></th> @* Empty TH = image *@
                        <th>Name</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Description</th>
                        <th>Popular</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <!--Table Body -->
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@item.ImageUrl"
                                     alt="Menu item image of @item.Name"
                                     class="img-thumbnail"
                                     style="width: 100px; height: 100px; object-fit: cover;" />
                            </td>
                            <td>@item.Name</td>
                            <td>@item.Category</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>@item.Description</td>
                            <td>
                                @* Showcast Popular items with a badge *@
                                @if (item.IsPopular)
                                {
                                    <span class="badge bg-warning text-black ">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">No</span>
                                }
                            </td>
                            <!-- Actions btn -->
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.MenuItemId"
                                           class="btn-edit me-2" title="Edit Menu Item">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>

                                    <form asp-action="Delete" method="post" class="d-inline"
                                            onsubmit="return confirm('Are you sure you want to delete @item.Name?')">
                                        <input type="hidden" name="menuItemId" value="@item.MenuItemId" />
                                            <button type="submit" class="btn-delete" title="Delete Menu Item">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        }
        else
        {
            <div class="alert alert-primary" role="alert">
                <h4>No Menu Items were found</h4>
                <p>There are currently no Menu Items in the system</p>
            </div>
        }
    </section>
</div>