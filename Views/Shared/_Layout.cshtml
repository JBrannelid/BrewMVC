<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BrewMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BrewMVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="main-header">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Brew Café</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @* Admin nav menu *@
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            var userRole = User.FindFirst("role")?.Value;
                            if (userRole == "Admin" || userRole == "Manager")
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Administration
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                        <li><a class="dropdown-item" asp-controller="AdminBooking" asp-action="Index">Administrate Bookings</a></li>
                                        <li><a class="dropdown-item" asp-controller="AdminMenuItem" asp-action="Index">Administrate Menu Items</a></li>
                                        <li><a class="dropdown-item" asp-controller="AdminTable" asp-action="Index">Administrate Tables</a></li>
                                    </ul>
                                </li>
                            }
                        }
                        @* Public nav menu *@
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="MenuItem" asp-action="Index">Menu</a>
                        </li>
                        <li>
                            <a class="nav-link text-white" asp-area="" asp-controller="Booking" asp-action="Index">Booking</a>
                        </li>
                    </ul>
                </div>
                @{
                    var hasJwt = Context.Request.Cookies.ContainsKey("jwtToken");
                }

                @* User is stored in the HttpContext.User object as ClaimsPrincipal *@                      
                @if (User?.Identity?.IsAuthenticated == true)
                {
                    <!-- Authenticated user information -->
                    <div class="m-2 text-white" role="status" aria-label="Current user account">
                        <span aria-label="Logged in as">@User.FindFirst("unique_name").Value</span>
                        <span aria-hidden="true"> | </span>
                        <span aria-label="Current role">@User.FindFirst("role").Value</span>
                    </div>
                }

                @* Conditional render Login/Logout Btn *@
                @if (hasJwt)
                    {
                        // If true - We have a jwtToken object
                        <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger" aria-label="Logout from account">
                                <i class="bg-info bi-box-arrow-right" aria-hidden="true"></i> Logout
                            </button>
                        </form>
                    }
                    else
                    {
                        <a asp-controller="Auth" asp-action="Login" class="btn btn-primary" aria-label="Login to account">
                            <i class="bi-box-arrow-in-right" aria-hidden="true"></i> Login
                        </a>
                    }
            </div>
        </nav>
    </header>
    <div class="container ">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BrewMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
