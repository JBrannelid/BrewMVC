<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BrewMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BrewMVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="main-header bg-dark text-white">
        <!-- NavBar-->
        <nav class="navbar navbar-expand-lg navbar-dark bg-transparent container-fluid">
            <!-- Hamburger menu button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <div class="d-lg-flex w-100 align-items-center">
                    <!-- Left -->
                    <ul class="navbar-nav align-items-center flex-row flex-wrap justify-content-start flex-fill">
                        <li class="nav-item me-3">
                            <a class="nav-link text-white fs-5" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <!-- Public Pages dropdown -->
                        <li class="nav-item dropdown fs-5 me-3">
                            <a class="nav-link dropdown-toggle text-white" href="#" data-bs-toggle="dropdown">
                                Pages
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                                <li><a class="dropdown-item" asp-controller="MenuItem" asp-action="Index">Menu</a></li>
                                <li><a class="dropdown-item" asp-controller="Booking" asp-action="Index">Booking</a></li>
                            </ul>
                        </li>
                        @* Admin nav menu - conditional rendering *@
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            var userRole = User.FindFirst("role")?.Value;
                            if (userRole == "Admin" || userRole == "Manager")
                            {
                                <li class="nav-item dropdown fs-5 me-3">
                                    <a class="nav-link dropdown-toggle text-white" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                                        Administration
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="AdminBooking" asp-action="Index">Administrate Bookings</a></li>
                                        <li><a class="dropdown-item" asp-controller="AdminMenuItem" asp-action="Index">Administrate Menu Items</a></li>
                                        <li><a class="dropdown-item" asp-controller="AdminTable" asp-action="Index">Administrate Tables</a></li>
                                    </ul>
                                </li>
                            }
                        }
                        <!-- User info (mobile) -->
                        <li class="nav-item d-lg-none">
                            @if (User?.Identity?.IsAuthenticated == true)
                            {
                                <span class="navbar-text text-white fs-6 me-3">
                                    @User.FindFirst("unique_name").Value | @User.FindFirst("role").Value
                                </span>
                            }
                            @{
                                var hasJwt = Context.Request.Cookies.ContainsKey("jwtToken");
                            }
                            @if (hasJwt)
                            {
                                <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-link btn-user" title="Logout">
                                        <i class="bi bi-box-arrow-right"></i>
                                    </button>
                                </form>
                            }
                            else
                            {
                                <a asp-controller="Auth" asp-action="Login" class="btn-user" title="Login">
                                    <i class="bi bi-person-circle me-1"></i>
                                </a>
                            }
                        </li>
                    </ul>

                    <!-- Middle (Desktop) -->
                    <div class="text-center d-none d-lg-block">
                        <i class="bi bi-cup-hot fs-3 me-2"></i>
                        <span class="fs-4">Brew Café</span>
                    </div>

                    <!-- Right (Desktop) -->
                    <div class="flex-fill d-flex justify-content-end align-items-center d-none d-lg-flex">
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <div class="m-2 text-white fs-5">
                                <span>@User.FindFirst("unique_name").Value</span>
                                <span> | </span>
                                <span>@User.FindFirst("role").Value</span>
                            </div>
                        }
                        @if (hasJwt)
                        {
                            <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-link btn-user ms-3" title="Logout">
                                    <i class="bi bi-box-arrow-right"></i>
                                </button>
                            </form>
                        }
                        else
                        {
                            <a asp-controller="Auth" asp-action="Login" class="btn-user ms-3" title="Login">
                                <i class="bi bi-person-circle me-1"></i>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
        <div class="mt-3">&nbsp</div> @* Spacer *@
        <div class="text-center text-white">
            <h1 class="cafe-heading mb-3" style="font-size: 4rem;">Welcome to Brew Café</h1>
            <p class="lead mb-4" style="font-size: 1.3rem;">Where every cup tells a story and every bite creates memories</p>
            <div class="d-flex gap-3 justify-content-center flex-wrap">
                <a asp-controller="MenuItem" asp-action="Index" class="btn btn-explore-menu btn-lg px-4 py-2">
                    <i class="bi bi-cup-hot me-2"></i>Explore Menu
                </a>
                <a href="@Configuration["ExternalUrls:BookingApp"]"
                   target="_blank"
                   rel="noopener noreferrer"
                   class="btn btn-lg px-4 py-2"
                   style="background-color: transparent; border: 2px solid white; color: white; text-decoration: none;">
                    <i class="bi bi-calendar-check me-2"></i>Book a Table
                </a>
            </div>
        </div>
    </header>
    <div class="container">
        <main class="pb-3">
            <!-- Alert Banner Partial View -->
            @await Html.PartialAsync("_AlertBanner")
            <!-- Render Views -->
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BrewMVC
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @inject IConfiguration Configuration
</body>
</html>