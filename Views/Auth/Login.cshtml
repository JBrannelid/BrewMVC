@using BrewMVC.ViewModel
@using BrewMVC.ViewModel.Auth
@model LoginUserVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="row justify-content-center mt-5 mb-5">
    <div class="col-lg-5">
        <div class="card rounded-3 p-4">
            <form asp-action="Login" method="post">
                <div class="card-header text-center bg-white">
                    <h2 class="mb-0 custom-heading">Login</h2>
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold"></label>
                    <input asp-for="Email" autocomplete="email" class="form-control" aria-describedby="email-feedback" />
                    <span asp-validation-for="Email" class="text-danger" id="email-feedback" aria-live="polite"></span>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-bold"></label>
                    <input asp-for="Password" autocomplete="current-password" type="password" class="form-control" aria-describedby="password-feedback" />
                    <span asp-validation-for="Password" class="text-danger" id="password-feedback" aria-live="polite"></span>
                </div>

                <!-- Action Btn -->
                <button type="submit" class="btn btn-primary w-50 d-block mx-auto" aria-label="Login in as user">
                    Login
                </button>
            </form>
        </div>
    </div>
</section>
