@{
    ViewData["Title"] = "Access Denied";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-danger text-center">
                <h1 class="display-4">Access Denied</h1>
                <p class="lead">You don't have permission to access this page.</p>
                <p>You need Admin or Manager privileges to access the administration area.</p>
                <hr>
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Go to Home</a>
                <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-secondary">Login with Different Account</a>
            </div>
        </div>
    </div>
</div>